<% if user_signed_in? %>  
    <%= render 'shared/navbar' %>
<% end %>

<div class="d-flex align-items-center flex-column mb-3 justify-content-around" >
    <div class="list-group-item list-group-light m-2 card">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center w-100">
                <%= image_tag @category.icon, size: "85x85"%>
                <div class="m-3 flex-grow-1">
                    <p class="fw-bold mb-1"><%= @category.name%></p>
                </div>
            </div>  
        </div>
    </div>
    <% if @purchases.length > 0 %>
        <%= render partial: 'purchases', locals: {purchases: @purchases } %>
    <% else %>
        <div style='margin: 40px;'>
            <h4 class='text-center'><%= 'No purchases for ' %><%= @category.name %></h4>
        </div>
    <% end %>
    <div class="w-100 text-center add-category">
        <%= link_to 'ADD PURCHASE', new_user_category_purchase_path, class: 'list-group-item list-group-item-action', style: "background-color: #5fb523; color: #fff; border-radius: 5px;" %>   
    </div>
</div>
