<% categories.each do |c| %>
    <div class="list-group list-group-light m-2">
        <a href="<%= user_category_purchases_path(user_id: current_user.id, category_id: c.id) %>"  class="list-group-item list-group-item-action ">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center w-100">
                    <%= image_tag c.icon, size: "85x85"%>
                    <div class="m-3 flex-grow-1">
                        <p class="fw-bold mb-1"><%= c.name%></p>
                        <hr class='m-0 w-100'/>
                        <small class="text-muted mb-0"><% c.created_at.to_date %></small>
                    </div>
                </div>
                <span class="badge rounded-pill badge-success">Active</span>
            </div>
        </a>
    </div>
<% end %>